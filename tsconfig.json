{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noEmit": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom", "webworker"],
        "types": ["bezier-js", "color-namer", "file-saver", "lodash", "offscreencanvas", "pica", "three", "uuid"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "noImplicitAny": false
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": [
        "node_modules"
    ]
}
